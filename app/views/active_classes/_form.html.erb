<div class="te_form">
  <%= form_for(@active_class) do |f| %>
      <% if @active_class.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@active_class.errors.count, 'error') %> prohibited this active_class from being
              saved:</h2>

            <ul>
              <% @active_class.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>
      <fieldset>
        <legend>Enter Active Class information</legend>

        <div class="field">
          <%= f.label :name, 'Class room name:' %><br>
          <%= f.text_field :name %>
        </div>
        <div class="field">
          <%= f.label :number, 'Class Number:' %><br>
          <%= f.text_field :number %>
        </div>
        <div class="field">
          <%= f.label :user_id, 'Teacher:' %> <br>
          <%= f.collection_select(:user_id, User.where(id_type: 2), :id, :real_name, {}, {}) %>

        </div>
        <div class="actions">
          <%= f.submit 'Create Class' %>
        </div>
      </fieldset>
  <% end %>
</div>